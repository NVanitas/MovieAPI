{
    // Especifica os hosts permitidos para a aplicação. O '*' significa que qualquer host pode acessar a API.
    "AllowedHosts": "*",

    // Configuração das strings de conexão do banco de dados.
    "ConnectionStrings": {
        // A string de conexão para o banco de dados MovieContext.
        // Ela define o servidor, o banco de dados e algumas opções de segurança.
        "MovieContext": "Server=Nitro\\SQLEXPRESS;Database=MovieContext;MultipleActiveResultSets=true;Trusted_Connection=True;TrustServerCertificate=True"
    },

    // Configuração de logging da aplicação.
    "Logging": {
        // Define o nível de log para diferentes componentes da aplicação.
        "LogLevel": {
            // O nível de log padrão é "Information", o que significa que logs de informações serão registrados.
            "Default": "Information",
            // O nível de log para o Microsoft.AspNetCore é "Warning", o que significa que apenas avisos e erros serão registrados.
            "Microsoft.AspNetCore": "Warning"
        }
    }
}
